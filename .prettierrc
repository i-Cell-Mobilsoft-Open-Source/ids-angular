{
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "arrowParens": "always",
  "printWidth": 140,
  "endOfLine": "auto",
  "importOrderParserPlugins": ["typescript", "decorators-legacy"],
  "importOrder": [
    "^rxjs(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^(src|./|../)(.*)$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
