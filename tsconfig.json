/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2023",
    "module": "ESNext",
    "useDefineForClassFields": false,
    "lib": ["ES2023", "dom"],
    "types": ["node", "jest", "cypress", "cypress-real-events"],
    "paths": {
      "@i-cell/ids-angular/*": ["projects/widgets/*", "projects/widgets"],
      "@i-cell/ids-angular": ["dist/widgets/*", "dist/widgets"],
      "@demo-utils/*": ["projects/demo/src/utils/*"],
      "@demo-types/*": ["projects/demo/src/types/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": true,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "exclude": ["./cypress.config.ts", "cypress"]
}
